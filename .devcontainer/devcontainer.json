{
  "name": "android-codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    // Java 17 like the workflow's `actions/setup-java@v4`
    "ghcr.io/devcontainers/features/java:1": { "version": "17" },

    // Tiny helpers (curl, git, zsh, etc.)
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  // Everything else (Flutter + writable Android SDK) is installed by the
  // scripts that run *inside* the container, as the non-root `codespace` user.
  "postCreateCommand": [
    "bash .devcontainer/scripts/install_flutter.sh    3.24.0",
    "bash .devcontainer/scripts/install_user_sdk.sh   33.0.1 33 31 29 26.3.11579264"
  ],

  "containerEnv": {
    // Add Flutter & SDK to every shell PATH once the scripts have run
    "PATH": "${containerEnv:PATH}:$HOME/flutter/bin:$HOME/android-sdk/platform-tools"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter",
        "vscjava.vscode-gradle",
        "eamodio.gitlens",
        "ms-vscode.cpptools"
      ]
    }
  },

  "forwardPorts": [5555, 8080],
  "remoteUser": "codespace"
}
