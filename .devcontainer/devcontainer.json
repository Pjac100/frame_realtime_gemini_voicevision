{
  "name": "android-codespace",

  // Use the pre-built Ubuntu base image instead of writing a Dockerfile for now
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    // Shell utilities, git, zsh, etc.
    "ghcr.io/devcontainers/features/common-utils:2": {},

    // JDK 17 **and Gradle (via installGradle)**
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": true
    },

    // Android SDK (API-34)
    "ghcr.io/casl0/devcontainer-features/android-sdk:1": {
      "version": "34.0.0"
    },

    // Flutter SDK
    "ghcr.io/hsun1031/devcontainer_flutter:latest": {}
  },

  // Make Flutterâ€™s CLI available in every shell
  "containerEnv": {
    "PATH": "${containerEnv:PATH}:/workspaces/frame_realtime_gemini_voicevision/.devcontainer/flutter/bin"
  },

  "postCreateCommand": [
    "chmod +x .devcontainer/scripts/accept-android-licenses.sh",
    ".devcontainer/scripts/accept-android-licenses.sh",
    "java -version",
    "gradle --version"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-gradle",
        "eamodio.gitlens",
        "ms-vscode.cpptools",
        "dart-code.flutter"
      ]
    }
  },

  "forwardPorts": [5555, 8080]
}
