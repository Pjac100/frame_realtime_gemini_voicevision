{
  "name": "android-codespace",

  // Use your Dockerfile so you keep any custom layers youâ€™ve already added
  "build": { "dockerfile": "Dockerfile" },

  "features": {
    // Basic CLI goodies (curl, git, zsh, etc.)
    "ghcr.io/devcontainers/features/common-utils:2": {},

    // Java 17 plus Gradle (devcontainers/java can install Gradle for you)
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": true          // gives you gradle in the PATH
    },

    // Android SDK (API 34)
    "ghcr.io/casl0/devcontainer-features/android-sdk:1": {
      "version": "34.0.0"
    },

    // Flutter SDK (correct registry path + feature name)
    "ghcr.io/hsun1031/devcontainer-features/flutter:latest": {}
  },

  "postCreateCommand": [
    // Accept Android licenses
    "chmod +x .devcontainer/scripts/accept-android-licenses.sh",
    ".devcontainer/scripts/accept-android-licenses.sh",

    // Quick sanity-check of toolchains
    "java -version",
    "gradle --version",
    "flutter --version"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-gradle",
        "eamodio.gitlens",
        "ms-vscode.cpptools",
        "dart-code.flutter"
      ]
    }
  },

  // Commonly exposed ports (ADB + your dev server)
  "forwardPorts": [5555, 8080],

  // Default non-root user inside the container
  "remoteUser": "codespace"
}
