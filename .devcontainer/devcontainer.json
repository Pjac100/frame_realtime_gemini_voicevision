{
	// ────────────────────────────────────────────────
	// Dev Container definition for
	//   “frame_realtime_gemini_voicevision”
	// ────────────────────────────────────────────────
	"name": "Frame Realtime Gemini VoiceVision",

	// Use your existing Dockerfile (or remove this “build”
	// block if you rely on the base image alone).
	"build": {
		"dockerfile": "Dockerfile",      // or "Dockerfile.extended"
		"context": "..",
		"args": {}                       // (unchanged)
	},

	// ── Features ─────────────────────────────────────
	"features": {
		// 1) Shell / dot-files / common CLIs
		"ghcr.io/devcontainers/features/common-utils": {
			// keep the defaults you had; only show the one
			// overridden option here for clarity
			"installZsh": "false",
			"username": "vscode"
		},

		// 2) **FIXED** Java – Temurin 17 LTS (works on Ubuntu 24.04)
		"ghcr.io/devcontainers/features/java": {
			"version": "17",
			"jdkDistro": "tem"
		},

		// 3) Android SDK (unchanged)
		"ghcr.io/casl0/devcontainer-features/android-sdk": {
			"version": "34",
			"installLocation": "/home/vscode/android-sdk"
		}
	},

	// ── Post-create actions ──────────────────────────
	// Gradle 8.7 is compatible with Temurin 17.
	"postCreateCommand": "sdk install gradle 8.7 || true",

	// Work as the non-root user that the common-utils
	// feature already created.
	"remoteUser": "vscode"
}
