{
  "name": "Android CI Parity (Ubuntu 22.04)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "32gb"
  },

  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": "false",
      "installGradle": "true"
    },
    "ghcr.io/NordcomInc/devcontainer-features/android-sdk:1": {
      "version": "latest",
      "buildToolsVersion": "34.0.0",
      "platformVersion": "34",
      "cmake": "true"
    }
  },

  // CORRECTED: Removed the manual JAVA_HOME definition.
  // The Java feature will now set this automatically and correctly.
  "containerEnv": {
    "ANDROID_HOME": "/opt/android-sdk",
    "ANDROID_SDK_ROOT": "/opt/android-sdk"
  },

  "postCreateCommand": "yes | sdkmanager --licenses && ./gradlew :app:dependencies",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-gradle",
        "naco-siren.gradle-language",
        "fwcd.kotlin",
        "github.codespaces"
      ],
      "settings": {
        // This setting is still correct. It will now use the correct JAVA_HOME
        // variable that the Java feature provides automatically.
        "java.home": "${containerEnv:JAVA_HOME}",
        "java.configuration.runtimes": [
           {
             "name": "JavaSE-17",
             "path": "${containerEnv:JAVA_HOME}",
             "default": true
           }
        ]
      }
    }
  },

  "forwardPorts": [5037]
}
